

package takeInput;
import java.io.InputStream;
import java.util.Scanner;





public class takeInput {

	public static void main(String[] args) {
		// TODO Auto-generated method stub


		// TODO Auto-generated method stub
		Scanner input = new
		Scanner(System.in);
		
		
		
		
		
	System.out.println("Enter an input of any kind: ");
		
		String dataString = input.next(); 
		
		System.out.println("Input Data:" + dataString); 
		
		
		System.out.println("Enter an integer: ");
		
		int dataInt = input.nextInt(); 
		
		System.out.println("Input Data:" + dataInt); 
		
		
		
		
		System.out.println("Enter an Double: ");
		
		double dataDouble = input.nextInt(); 
		
		System.out.println("Input Data:" + dataDouble); 
		
		

		System.out.println("Enter an Straang: ");
		
		  String straang = input.nextLine(); 
		
		System.out.println("Input Data:" + straang); 
		
		
		
		
		//close.Scanner
		input.close();
		
		
		
		
		
		
		
	}
	
	}










